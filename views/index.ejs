<!DOCTYPE html>
<html lang="en">
<%- include('partials/head.ejs') %>

<body>
   <h1>Welcome to my Blog!!</h1>    
   <%- include('partials/nav.ejs') %>

   <div class="blogs content">
    <h2>All BLogs</h2>
    <hr>     
    

    <% if (blogs.length > 0) { %>
        <% blogs.forEach(blog => { %>
            <a class="single" href="/blogs/<%= blog.id %>">
            <br>
    <h3><%= blog.title %></h3>   
    <p><%= blog.content %></p>
    </a>    
    
       <% });} %>

    

        


    
</div>
</body>

</html>